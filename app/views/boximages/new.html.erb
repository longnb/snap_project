<% provide(:title, 'New Boximage') %>
<h1>New Boximage</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@boximage) do |f| %>
      <%= render 'shared/error_messages_boximage' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description , :size => "20x5"%>
      <br>

      <%= f.select :category_id, Category.all.collect { |n| [n.name, n.id] }, :cols => "20" %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <br>
      <%= f.submit "Create New Boximage", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>